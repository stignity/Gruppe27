@model IEnumerable<Byporten.aktuelt>
@using System.Linq

@{
    ViewBag.Title = "Alle tilbudene";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="container">
    <h2 class="page-header">Alle tilbudene</h2>

    <p class="createNewButton">
        @Html.ActionLink("Lag nytt tilbud", "CreateOffer")
    </p>

    @if (!Model.Any())
    {
        <p class="lead page-header">Det finnes ingen tilbud</p>
    }
    else
    {
       foreach (var item in Model.Reverse())
       {
        <div class="last-article-wrap">
            <div class="article-title" id="query">
                <h4>@Html.DisplayFor(modelitem => item.Tittel)</h4>
            </div>
            <div class="article-content">
                <p>@Html.DisplayFor(modelitem => item.Innhold)</p>
                <hr />
                <p><b>Startdato:</b> @Html.DisplayFor(modelitem => item.Startdato)</p>
                <p><b>Sluttdato:</b> @Html.DisplayFor(modelitem => item.Sluttdato)</p>
                <p><b>BildeURL:</b> @Html.DisplayFor(modelitem => item.Bilde)</p>
                <div class="choices">
                    <p>@Html.ActionLink("Endre", "EditOffer", new { id = item.Id }, new { @class = "link-button" })</p>
                    <p>@Html.ActionLink("Detaljer", "OfferDetails", new { id = item.Id }, new { @class = "link-button" })</p>
                    <p>@Html.ActionLink("Slett", "DeleteOffer", new { id = item.Id }, new { @class = "link-button" })</p>
                </div>
            </div>



        </div>
       }
    }

    
</div>