@model IEnumerable<Byporten.createpost>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-lg-3 col-md-4">
            <div class="statistic-boxes">
                <p class="lead">52</p>
            </div>
        </div>
        <div class="col-lg-3 col-md-4">
            <div class="statistic-boxes">
                <p class="lead">522</p>
            </div>
        </div>
        <div class="col-lg-3 col-md-4">
            <div class="statistic-boxes">
                <p class="lead">34</p>
            </div>
        </div>
        <div class="col-lg-3 col-md-4">
            <div class="statistic-boxes">
                <p class="lead">1203</p>
            </div>
        </div>
    </div>

    <div class="index-content">
        <div class="search-area">
            <form id="live-search" action="" method="post">
                <input type="search" class="search-bar" id="filter" placeholder="Søk igjennom artiklene!" />
            </form>
        </div>

        <div class="main-content">
            <div class="top-feed-header">
                <p><i class="fa fa-rss"></i> Siste 10 artiklene</p>
            </div>
            @foreach (var item in Model.Reverse().Take(10))
            { 
            <div class="last-article-wrap">
                <div class="article-title">
                    <p class="lead">@Html.DisplayFor(model => item.Title)</p>
                </div>
                <div class="article-content">
                    @Html.DisplayFor(model => item.Content)
                </div>
            </div>
            }
        </div>
        <div class="sidebar">
            <div class="top-feed-header">
                <p><i class="fa fa-pie-chart"></i> Statisikk</p>
            </div>
            <div class="sidebar-body">
                <center>
                    <i class="fa fa-area-chart"></i>
                    <i class="fa fa-line-chart"></i>
                    <i class="fa fa-bar-chart"></i>
                </center>
            </div>
        </div>
    </div>
</div>

