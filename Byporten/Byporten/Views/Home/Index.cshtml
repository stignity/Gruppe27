@model IEnumerable<Byporten.createpost>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutClient.cshtml";
}

<div class="container-fluid">
    <h2 class="page-header">Index</h2>
    @{
        var displayedArticles = 6;
    }
    @foreach (var item in Model.Take(displayedArticles))
    {
        <div class="col-lg-4">
            <h2>@Html.DisplayFor(modelItem => item.Title) </h2>
            <div id="textContent">
                @Html.DisplayFor(modelItem => item.Content)
            </div>
        </div>
    }
    <div class="col-lg-12" >
        <input type="button" class="btn btn-success" value="Show more articles" onclick="@(displayedArticles += 6)" style="width: 100%"/> 
    </div>
</div> 
</div>

