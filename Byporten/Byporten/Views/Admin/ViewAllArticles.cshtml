@model IEnumerable<Byporten.createpost>
@using System.Linq

@{
    ViewBag.Title = "Alle artiklene";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="container">
    <h2 class="page-header">Alle artiklene!</h2>

    <p class="createNewButton">
        @Html.ActionLink("Opprett ny artikkel", "Create")
    </p>
    <hr />
    <div class="search-area">
        <form id="live-search" action="" method="post">
            <input type="search" class="search-bar" id="filter" placeholder="Søk igjennom artiklene!" />
        </form>
    </div>
    <hr />
        @if (!Model.Any())
        {
            <p class="lead page-header">Det finnes ingen artikler</p>
        }
        else
        {
            <table class="table table-striped viewTable">
                <thead>
                    <tr>
                        <td>Tittel</td>
                        <td>Endre</td>
                        <td>Detaljer</td>
                        <td>Slett</td>
                    </tr>
                </thead>
                @foreach (var item in Model.Reverse())
                {

                <tbody>
                    <tr>
                        <td id="query">@Html.DisplayFor(modelitem => item.Title)</td>
                        <td>@Html.ActionLink("Endre", "Edit", new { id = item.Id }, new { @class = "link-button" })</td>
                        <td>@Html.ActionLink("Detaljer", "Details", new { id = item.Id }, new { @class = "link-button" })</td>
                        <td>@Html.ActionLink("Slett", "Delete", new { id = item.Id }, new { @class = "link-button" })</td>
                    </tr>
                </tbody>

                }
            </table>
        }
</div>
