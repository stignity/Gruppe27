@model IEnumerable<Byporten.createpost>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-lg-3">
            <div class="statistic-boxes">
                <p class="lead">Statistikk for ditt og datt</p>
            </div>
        </div>
        <div class="col-lg-3">
            <div class="statistic-boxes">
                <p class="lead">Statistikk for ditt og datt</p>
            </div>
        </div>
        <div class="col-lg-3">
            <div class="statistic-boxes">
                <p class="lead">Statistikk for ditt og datt</p>
            </div>
        </div>
        <div class="col-lg-3">
            <div class="statistic-boxes">
                <p class="lead">Statistikk for ditt og datt</p>
            </div>
        </div>
    </div>

    <div class="index-content">
        <div class="search-area">
            <input type="search" class="search-bar" placeholder="Søk igjennom artiklene!" />
        </div>

        <div class="main-content">
            <div class="top-feed-header">
                <p><i class="fa fa-rss"></i> Siste 5 artiklene</p>
            </div>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <td>Tittel</td>
                        <td>Startdato</td>
                        <td>Sluttdato</td>
                    </tr>
                </thead>
            </table>
            @foreach (var item in Model.Reverse().Take(5)) 
            { 
            <table class="table table-striped">
                <tr>
                    <td>
                        @Html.DisplayFor(model => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(model => item.CreateDate)
                    </td>
                    <td>
                        @Html.DisplayFor(model => item.ExpireDate)
                    </td>
                </tr>
            </table>
            }
        </div>
        <div class="sidebar">
            <div class="top-feed-header">
                <p><i class="fa fa-pie-chart"></i> Statisikk</p>
            </div>
            <div class="sidebar-body">
                <center>
                    <i class="fa fa-area-chart"></i>
                    <i class="fa fa-line-chart"></i>
                    <i class="fa fa-bar-chart"></i>
                </center>
            </div>
        </div>
    </div>
</div>

