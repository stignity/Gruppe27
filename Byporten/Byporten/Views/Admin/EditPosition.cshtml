@model Byporten.availablepositions

@{
    ViewBag.Title = "EditPosition";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container">

    <h2>Endre denne stillingen</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()


        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="create-new-wrap">
            <div class="main-board">
                <!--Tittel-->
                @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "inputField", @placeholder = "Tittel" } })
                @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                <!--Artikkel-->
                @Html.TextAreaFor(model => model.Description, new { htmlAttributes = new { @class = "inputField" } })
                @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })

            </div>
        </div>
        <div class="settings-sidebar">
            <div class="sidebar-header-settings">
                <h4>Egenskaper</h4>
            </div>
            <div class="sidebar-content">
                <center>
                    <!--Startdato-->
                    <p>Startdato</p>
                    @Html.EditorFor(model => model.CreateDate, new { htmlAttributes = new { @class = "inputField", @type = "date" } })
                    @Html.ValidationMessageFor(model => model.CreateDate, "", new { @class = "text-danger" })
                    <!--Sluttdato-->
                    <p>Sluttdato</p>
                    @Html.EditorFor(model => model.ExpireDate, new { htmlAttributes = new { @class = "inputField", @type = "date" } })
                    @Html.ValidationMessageFor(model => model.ExpireDate, "", new { @class = "text-danger" })
                    <!--BildeURL-->
                    <p>BildeURL</p>
                    @Html.EditorFor(model => model.ImageURL, new { htmlAttributes = new { @class = "inputField", @type = "file" } })
                    @Html.ValidationMessageFor(model => model.ImageURL, "", new { @class = "text-danger" })
                    <!--Eksterne Lenker-->
                    <p>Eksterne lenker</p>
                    @Html.EditorFor(model => model.ExternalLinkURL, new { htmlAttributes = new { @class = "inputField file", @placeholder = "Eksterne lenker" } })
                    @Html.ValidationMessageFor(model => model.ExternalLinkURL, "", new { @class = "text-danger" })
                    <!--Publish button-->
                    <form>
                        <input type="submit" value="Publiser" class="publish-btn" />
                    </form>
                    <!--Back to list-->
                </center>
            </div>
        </div>

    }

</div>