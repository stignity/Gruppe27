@model IEnumerable<Byporten.createpost>
@{
    ViewBag.Title = "Forsiden";
    Layout = "~/Views/Shared/_LayoutClient.cshtml";
}

<div id="fb-root"></div>
<script>
(function(d, s, id) {
  var js, fjs = d.getElementsByTagName(s)[0];
  if (d.getElementById(id)) return;
  js = d.createElement(s); js.id = id;
  js.src = "//connect.facebook.net/nb_NO/sdk.js#xfbml=1&version=v2.3";
  fjs.parentNode.insertBefore(js, fjs);
}(document, 'script', 'facebook-jssdk'));</script>

<div class="carousel-wrap">
    <div id="slideshow">
        <div id="image1">
                <!--Image-->
        </div>
        <div id="image2">
                <!--Image-->
        </div>
        <div id="image3">
                <!--Image-->
        </div>
    </div>
</div>  


<div class="top-info-bar">
    <div class="container">
        <center>
            <ul class="top-info-sublist lead">
                <li>Hverdager: 09.00 - 21.00</li>
                <li>Lørdager 10.00 - 21.00</li>
                <li>Stengt: Søndager</li>
                <li><div class="fb-like" data-href="https://www.facebook.com/Bypadmin?fref=ts" data-width="150px" data-layout="button_count" data-action="like" data-show-faces="true" data-share="true"></div></li>
            </ul>
        </center>
    </div>
</div>

<div class="container front-page-container">
    <p class="page-header lead">Artikler</p>
    <div class="article-section">
        @{
            var itemCount = 0;
        }
        @foreach (var item in Model.Reverse().Take(9))
        {
            if (itemCount % 3 == 0 || itemCount % 3 == 3)
            {
                @:<div class="row article-row">
            }
            <a href="@Url.Action("viewArticles", new {id = item.Id })">
                <div class="col-lg-4 col-md-4 col-sm-4 article-wrapper">
                    <div class="image-section">
                        <div class="the-image">
                            <center>
                                <img class="image-placeholder" src="~/images/uploads/@Html.DisplayFor(modelItem => item.ImageURL)" />
                            </center>
                        </div>
                    </div>
                    <div class="title-section">
                        <center>
                            <h4>@Html.DisplayFor(modelItem => item.Title)</h4>
                        </center>
                    </div>
                </div>
            </a>

            itemCount++;

            if ((itemCount % 3) == 0)
            {
                @:</div>
                @:<hr class="divider" />


            }

        }
    </div>
</div>


 

