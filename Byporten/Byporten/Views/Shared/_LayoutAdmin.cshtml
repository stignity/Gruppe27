<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/Content/layoutAdmin.css" rel="stylesheet" />
    <link href="~/Content/font-awesome.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/admin-body.css" rel="stylesheet" />
    <link href="~/Content/admin-responsive.css" rel="stylesheet" />
</head>
<body>

    <div class="header-wrap">
        <div class="container">
            @if (Request.IsAuthenticated)
            {
                <h2 class="logo pull-left">Byporten<span class="fa fa-stumbleupon"></span>Shopping</h2>
                <h2 class="fa fa-bars menu-button-mobile"></h2>
                <ul class="user-logged-in pull-right">
                    <li role="presentation" class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-expanded="false"><i class="fa fa-user"></i> @Html.Encode(User.Identity.Name) 
                        <span class="caret"></span> 
                        </a>
                        <ul class="dropdown-menu" role="menu">
                            <li class="log-out">@Html.ActionLink("Logg ut", "Logout", "Admin")</li>
                        </ul>
                    </li>
                </ul>
                
            }
        </div>
    </div>

    <div class="menu-wrap">
        <div class="container">
            <ul class="admin-navigation pull-right">
                <li>@Html.ActionLink("Forsiden", "index", "Admin")</li>
                <li>@Html.ActionLink("Artikler", "ViewAllArticles", "Admin")</li>
                <li>@Html.ActionLink("Stillinger", "AllPositions", "Admin")</li>
                <li>@Html.ActionLink("Butikker", "ViewAllStores", "Admin")</li>
                <li>@Html.ActionLink("Tilbud", "ViewAllOffers", "Admin")</li>
            </ul>
        </div>
    </div>

    <div class="render-body">
        @RenderBody()
    </div>
    <script src="~/Scripts/jquery-1.11.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/layoutAdmin.js"></script>
</body>
</html>
