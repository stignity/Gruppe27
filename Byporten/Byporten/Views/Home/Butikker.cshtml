@model IEnumerable<Byporten.butikker>
@using System.Linq
@{
    ViewBag.Title = "Butikker";
    Layout = "~/Views/Shared/_LayoutClient.cshtml";
}


<div class="container butikk-container">
    <h3 class="page-header">Butikker</h3>

    <input type="search" id="filter" class="search-store" placeholder="Søk på butikker!" />
    <p class="lead no-store"></p>

    @{
        var itemcount = 0;
    }

    @if (!Model.Any())
    {
        <p class="lead">Det finnes ingen butikker!</p>
    }
    else
    {
        foreach (var store in Model.OrderBy(item => item.Navn))
        {

             if (itemcount % 3 == 0 || itemcount % 3 == 3)
            {
               @:<div class="row">
            }

        <a class="store-link" href="@Url.Action("viewStore", new {id = store.Id })">
            <div class="col-lg-4 store">
                <div class="inner-store">
                    <p class="lead">@Html.DisplayFor(modelItem => store.Navn)</p>
                    <span style="display: none;">@Html.DisplayFor(modelItem => store.Kategori)</span>
                </div>
            </div>
        </a>

            itemcount++;

            if ((itemcount % 3) == 0)
            {
                @:</div>
            }
        }
    }

    

</div>
