@model Byporten.Models.UserRegModel

@{
    ViewBag.Title = "Registrering";
    Layout = "~/Views/Shared/_LayoutClient.cshtml";
}

<h2>Registrering</h2>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true, "Kunne ikke registrere. Venligst prøv på nytt senere.");
    <div>
        <fieldset>
            <legend>Opprett Byporten Pluss Brukerkonto</legend>

            <div class="editor-label">
                @Html.LabelFor(u => u.Name)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(u => u.Name)
                @Html.ValidationMessageFor(u => u.Name)
            </div>

            <div class="editor-label">
                @Html.LabelFor(u => u.Email)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(u => u.Email)
                @Html.ValidationMessageFor(u => u.Email)
            </div>

            <div class="editor-label">
                @Html.LabelFor(u => u.Birthdate)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(u => u.Birthdate)
                @Html.ValidationMessageFor(u => u.Birthdate)
            </div>

            <div class="editor-label">
                @Html.LabelFor(u => u.ZipCode)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(u => u.ZipCode)
                @Html.ValidationMessageFor(u => u.ZipCode)
            </div>

            <div class="editor-label">
                @Html.LabelFor(u => u.City)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(u => u.City)
                @Html.ValidationMessageFor(u => u.City)
            </div>

            <div class="editor-label">
                @Html.LabelFor(u => u.Password)
            </div>
            <div class="editor-field">
                @Html.PasswordFor(u => u.Password)
                @Html.ValidationMessageFor(u => u.Password)
            </div>

            <input type="submit" value="Registrer" />
        </fieldset>
    </div>
}

