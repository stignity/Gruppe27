@model IEnumerable<Byporten.availablepositions>
@using System.Linq

@{
    ViewBag.Title = "Alle stillinger";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container">
    <h2 class="page-header">Alle stillingene</h2>

    <p class="createNewButton">
        @Html.ActionLink("Lag ny stilling", "createNewPosition")
    </p>

    @if (!Model.Any())
    {
        <p class="lead page-header">Det finnes ingen artikler</p>
    }
    else
    {
        <table class="table table-striped">
            <thead>
                <tr>
                    <td>Tittel</td>
                    <td>Sluttdato</td>
                    <td>Endre</td>
                    <td>Detaljer</td>
                    <td>Slett</td>
                </tr>
            </thead>


            @foreach (var item in Model.Reverse())
            {
            <tbody>
                <tr>
                    <td>@Html.DisplayFor(modelitem => item.Title)</td>
                    <td>@Html.DisplayFor(modelitem => item.ExpireDate)</td>
                    <td>@Html.ActionLink("Endre", "EditPosition", new { id = item.Id }, new { @class = "link-button" })</td>
                    <td>@Html.ActionLink("Detaljer", "PositionDetails", new { id = item.Id }, new { @class = "link-button" })</td>
                    <td>@Html.ActionLink("Slett", "DeletePosition", new { id = item.Id }, new { @class = "link-button" })</td>
                </tr>
            </tbody>
            }
        </table>
    }

    
</div>