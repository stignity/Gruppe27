@model Byporten.Models.UserCreateModel
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_LayoutClient.cshtml";
}

<h2>Register</h2>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true, "Kunne ikke registrere, vennligst prøv på nytt.");
    <div>
        <fieldset>
            <legend>Opprett Byporten+ Bruker</legend>

            <div class="editor-label">
                @Html.LabelFor(u => u.FullName)
            </div>
            <div class="editor-field" >
                @Html.TextBoxFor(u => u.FullName)
                @Html.ValidationMessageFor(u => u.FullName)
            </div>

            <div class="editor-label" >
                @Html.LabelFor(u => u.Email)
            </div>
            <div class="editor-field" >
                @Html.TextBoxFor(u => u.Email)
                @Html.ValidationMessageFor(u => u.Email)
            </div>

            <div class="editor-label">
                @Html.LabelFor(u => u.Birthday)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(u => u.Birthday)
                @Html.ValidationMessageFor(u => u.Birthday)
            </div>

            <div class="editor-label">
                @Html.LabelFor(u => u.ZipCode)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(u => u.ZipCode)
                @Html.ValidationMessageFor(u => u.ZipCode)
            </div>

            <div class="editor-label">
                @Html.LabelFor(u => u.City)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(u => u.City)
                @Html.ValidationMessageFor(u => u.City)
            </div>

            <div class="editor-label">
                @Html.LabelFor(u => u.Password)
            </div>
            <div class="editor-field">
                @Html.PasswordFor(u => u.Password)
                @Html.ValidationMessageFor(u => u.Password)
            </div>
            <input type="submit" value="Registrer" />
        </fieldset>
    </div>
}

