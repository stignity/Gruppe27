@model Byporten.Models.UserLoginModel
@{
    ViewBag.Title = "Kundeklubb";
    Layout = "~/Views/Shared/_LayoutClient.cshtml";
}

<div class="container pushDown">
    <h3 class="page-header lead">Kundeklubben</h3>
    <div class="row">
        <div class="col-lg-6 col-md-6 col-sm-6">  
            <ul>
                <li>-20% på alle ordinære varer, samt -15% på skipakker hos G-Sport</li>
                <li>-30% på valgfri behandling hos Headmasters</li>
                <li>-20% på alle varer (unntatt Samsonite) hos BagOrama</li>
                <li>Kanelbolle kr 20,- (ord. pris kr 36,-) hos BIT</li>
                <li>-25% på all Basic VILA hos Camilla Risøe</li>
                <li>Gratis WiFi</li>
                <li>OG MASSE MASSE MER.....</li>

            </ul>
        </div>
        <div class="col-lg-6 col-md-6 col-sm-6">
            @if(Request.IsAuthenticated){
                @: <h1 class="page-header lead">Du er logget inn som @Html.Encode(User.Identity.Name)</h1>
                @: @Html.ActionLink("Logg ut", "LogOut", "Home", new { @class = "logoutBtn" })
                @Html.ActionLink("Se fordeler", "Subscription", "Home", new { @class = "seeMoreBtn" })
            }
            else{
                using (Html.BeginForm())
                {
                    <div class="login-kunde-form">
                        <p class="lead">Logg inn</p>
                        <div class="editor-field">
                            @Html.ValidationMessageFor(u => u.Email)
                            @Html.TextBoxFor(u => u.Email, new { @placeholder = "E-post" })
                        </div>
                        <div class="editor-field">
                            @Html.ValidationMessageFor(u => u.Password)
                            @Html.PasswordFor(u => u.Password, new { @placeholder = "Passord" })
                        </div>
                        @Html.ValidationSummary(true)
                        <input type="submit" value="Logg inn" class="reg-button" />
                        <center>
                            <i id="loading"></i>
                        </center>
                        <hr />
                        
                        <p>@Html.ActionLink("Ikke medlem? Registrer deg her", "Registrering", "Home")</p>
                        <p>@Html.ActionLink("Glemt brukernavn/Passord", "")</p>
                    </div>
                }
            }
           
        </div>
    </div>
</div>
