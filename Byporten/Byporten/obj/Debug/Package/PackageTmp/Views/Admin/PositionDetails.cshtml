@model Byporten.availablepositions

@{
    ViewBag.Title = "Detaljer";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container">
    <h2 class="page-header">Detaljer</h2>
    <div class="view-articles-details-delete">
        <div class="title">
            <p class="lead">Tittel</p>
            @Html.DisplayFor(model => model.Title)
        </div>
        <hr />
        <div class="content">
            <p class="lead">Innhold</p>
            @Html.DisplayFor(model => model.Description)
        </div>
        <hr />
        <div class="other">
            <p><b>Startdato:</b> @Html.DisplayFor(model => model.CreateDate)</p>
            <p><b>Sluttdato:</b> @Html.DisplayFor(model => model.ExpireDate)</p>
            <p><b>BildeURL:</b> @Html.DisplayFor(model => model.ImageURL)</p>
            <img class="image-placeholder" src="~/images/uploads/@Html.DisplayFor(model => model.ImageURL)" />
            <hr />
            <p><b>Eksterne Lenker:</b> @Html.DisplayFor(model => model.ExternalLinkURL)</p>
        </div>
    </div>
    <p>
        @Html.ActionLink("Endre denne artikkelen!", "EditPosition", new { id = Model.Id }) |
        @Html.ActionLink("Tilbake til artiklene", "AllPositions")
    </p>

</div>