@model IEnumerable<Byporten.createpost>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container">
    <div class="index-content">
        <div class="main-content">
            <div class="top-feed-header">
                <p><i class="fa fa-rss"></i> Siste 5 artiklene</p>
            </div>

            @foreach (var item in Model.Reverse().Take(5))
            {
            <div class="last-article-wrap">
                <div class="article-title">
                    <h4>@Html.DisplayFor(model => item.Title)</h4>
                </div>
                <div class="article-content">
                    @Html.DisplayFor(model => item.Content)
                </div>
            </div>
            }
        </div>
        <div class="sidebar">
            <div class="top-feed-header">
                <p><i class="fa fa-pie-chart"></i> Statisikk</p>
            </div>
            <div class="sidebar-body">
                <center>
                    <i class="fa fa-area-chart"></i>
                    <i class="fa fa-line-chart"></i>
                    <i class="fa fa-bar-chart"></i>
                </center>
            </div>
        </div>
    </div>
</div>

