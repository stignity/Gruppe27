@model IEnumerable<Byporten.butikker>
@using System.Linq
@{
    ViewBag.Title = "Butikker";
    Layout = "~/Views/Shared/_LayoutClient.cshtml";
}


<div class="container butikk-container">
    <h3 class="page-header">Butikker</h3>
    <p class="lead no-store"></p>


    @if (!Model.Any())
    {
        <p class="lead">Det finnes ingen butikker!</p>
    }
    else
    {
        <div class="row">
            <div class="col-lg-4 col-md-4 col-sm-4">
                <p class="page-header lead">Mat og Drikke</p>
                @foreach (var item in Model.Where(i => i.Kategori == "Mat og drikke"))
                {
                    <ul class="store-list">
                        <li>
                            <a class="store-link" href="@Url.Action("viewStore", new {id = item.Id })">@Html.DisplayFor(modelItem => item.Navn)</a>
                        </li>
                    </ul>
                }

                <p class="page-header lead">Hus og Hjem</p>
                @foreach (var item in Model.Where(i => i.Kategori == "Hus og hjem"))
                {
                <ul class="store-list">
                    <li>
                        <a class="store-link" href="@Url.Action("viewStore", new {id = item.Id })">@Html.DisplayFor(modelitem => item.Navn)</a>
                    </li>
                </ul>
                }

                <p class="page-header lead">Service og Tjenesteytende</p>
                @foreach (var item in Model.Where(i => i.Kategori == "Service og Tjenesteytende"))
                {
                    <ul class="store-list">
                        <li>
                            <a class="store-link" href="@Url.Action("viewStore", new {id = item.Id })">@Html.DisplayFor(modelitem => item.Navn)</a>
                        </li>
                    </ul>
                }

                <p class="page-header lead">Servering</p>
                @foreach (var item in Model.Where(i => i.Kategori == "Servering"))
                {
                    <ul class="store-list">
                        <li>
                            <a class="store-link" href="@Url.Action("viewStore", new {id = item.Id })">@Html.DisplayFor(modelitem => item.Navn)</a>
                        </li>
                    </ul>
                }
            </div>

            <div class="col-lg-4 col-md-4 col-sm-4">
                <p class="page-header lead">Klær/Sko/Reiseeffekter</p>
                @foreach (var item in Model.Where(i => i.Kategori == "Klær/Sko/Reiseeffekter"))
                {
                    <ul class="store-list">
                        <li>
                            <a class="store-link" href="@Url.Action("viewStore", new {id = item.Id })">@Html.DisplayFor(modelitem => item.Navn)</a>
                        </li>
                    </ul>
                }
            </div>

            <div class="col-lg-4 col-md-4 col-sm-4">
                <p class="page-header lead">Spesialbutikker</p>
                @foreach (var item in Model.Where(i => i.Kategori == "Spesialbutikker"))
                {
                    <ul class="store-list">
                        <li>
                            <a class="store-link" href="@Url.Action("viewStore", new {id = item.Id })">@Html.DisplayFor(modelitem => item.Navn)</a>
                        </li>
                    </ul>
                }

            </div>
        </div>
    }

    

</div>
