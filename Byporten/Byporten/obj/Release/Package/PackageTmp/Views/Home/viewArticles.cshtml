@model Byporten.createpost
@{
    ViewBag.Title = "viewArticles";
    Layout = "~/Views/Shared/_LayoutClient.cshtml";
}

<div class="container pushDown">
    <div class="row">
        <div class="col-lg-6">
            <img src="~/images/uploads/@Html.DisplayFor(model => model.ImageURL)" class="img-responsive uploaded-image" />
        </div>
        <div class="col-lg-6">
            <h1 class="page-header">@Html.DisplayFor(model => model.Title)</h1>
            <p>@Html.DisplayFor(model => model.Content)</p>
        </div>
    </div>
</div>

