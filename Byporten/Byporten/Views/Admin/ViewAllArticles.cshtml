@model IEnumerable<Byporten.createpost>

@{
    ViewBag.Title = "ViewAllArticles";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="container">
    <h2 class="page-header">Alle artiklene!</h2>

    <div class="search-area">
        <form id="live-search" action="" method="post">
            <input type="search" class="search-bar" id="filter" placeholder="Søk igjennom artiklene!" />
        </form>
    </div>

    <p>
        @Html.ActionLink("Opprett ny artikkel", "Create")
    </p>


        @foreach (var item in Model)
        {
            <div class="last-article-wrap">
                <div class="article-title" id="query">
                    <p class="lead">@Html.DisplayFor(modelitem => item.Title)</p>
                </div>
                <div class="article-content">
                    @Html.DisplayFor(modelitem => item.Title)
                    <hr />
                    @Html.ActionLink("Endre", "Edit", new { id = item.Id }, new {@class = "link-button" })
                    @Html.ActionLink("Detaljer", "Details", new { id = item.Id }, new { @class = "link-button" })
                    @Html.ActionLink("Slett", "Delete", new { id = item.Id }, new { @class = "link-button" })
                </div>

                

            </div>
        }

</div>
