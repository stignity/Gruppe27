@model Byporten.aktuelt

@{
    ViewBag.Title = "Slett tilbud";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container">
    <h2 class="page-header">Er du sikker på at du vil slette dette tilbudet?</h2>
    <div class="view-articles-details-delete">
        <div class="title">
            <p class="lead">Tittel</p>
            @Html.DisplayFor(model => model.Tittel)
        </div>
        <hr />
        <div class="content">
            <p class="lead">Innhold</p>
            @Html.DisplayFor(model => model.Innhold)
        </div>
        <hr />
        <div class="other">
            <p><b>Startdato:</b> @Html.DisplayFor(model => model.Startdato)</p>
            <p><b>Sluttdato:</b> @Html.DisplayFor(model => model.Sluttdato)</p>
            <p><b>BildeURL:</b> @Html.DisplayFor(model => model.Bilde)</p>
        </div>
    </div>




    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <input type="submit" value="Slett" class="slett-btn btn btn-danger" />
        @Html.ActionLink("Tilbake", "ViewAllOffers")
    }
</div>