@model IEnumerable<Byporten.createpost>
@using System.Linq

@{
    ViewBag.Title = "Alle artiklene";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="container">
    <h2 class="page-header">Alle artiklene!</h2>

    <p class="createNewButton">
        @Html.ActionLink("Opprett ny artikkel", "Create")
    </p>
    <hr />
    <div class="search-area">
        <form id="live-search" action="" method="post">
            <input type="search" class="search-bar" id="filter" placeholder="Søk igjennom artiklene!" />
        </form>
    </div>
    <hr />
        @if (!Model.Any())
        {
            <p class="lead page-header">Det finnes ingen artikler</p>
        }
        else
        {
            foreach (var item in Model.Reverse()) 
            { 
                <div class="row itemInModel">
                    <div class="col-lg-10 col-md-10 col-sm-8">
                        <h3>@Html.DisplayFor(modelitem => item.Title)</h3>
                    </div>
                    <div class="col-lg-2 col-md-2 col-sm-4">
                        @Html.ActionLink("Endre", "Edit", new { id = item.Id }, new { @class = "link-button btn btn-primary" })
                        @Html.ActionLink("Detaljer", "Details", new { id = item.Id }, new { @class = "link-button btn btn-info" })
                        @Html.ActionLink("Slett", "Delete", new { id = item.Id }, new { @class = "link-button btn btn-danger" })
                    </div>
                </div>
            }
        }
</div>
