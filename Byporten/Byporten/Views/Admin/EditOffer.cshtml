@model Byporten.aktuelt

@{
    ViewBag.Title = "EditOffer";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="container">
    <h2>Endre dette tilbudet</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="create-new-wrap">
            <div class="main-board">
                <!--Tittel-->
                @Html.EditorFor(model => model.Tittel, new { htmlAttributes = new { @class = "inputField", @placeholder = "Tittel" } })
                @Html.ValidationMessageFor(model => model.Tittel, "", new { @class = "text-danger" })
                <!--Artikkel-->
                @Html.TextAreaFor(model => model.Innhold, new { htmlAttributes = new { @class = "inputField" } })
                @Html.ValidationMessageFor(model => model.Innhold, "", new { @class = "text-danger" })

            </div>
        </div>
        <div class="settings-sidebar">
            <div class="sidebar-header-settings">
                <h4>Egenskaper</h4>
            </div>
            <div class="sidebar-content">
                <center>
                    <!--Startdato-->
                    <p>Startdato</p>
                    @Html.EditorFor(model => model.Startdato, new { htmlAttributes = new { @class = "inputField", @type = "date" } })
                    @Html.ValidationMessageFor(model => model.Startdato, "", new { @class = "text-danger" })
                    <!--Sluttdato-->
                    <p>Sluttdato</p>
                    @Html.EditorFor(model => model.Sluttdato, new { htmlAttributes = new { @class = "inputField", @type = "date" } })
                    @Html.ValidationMessageFor(model => model.Sluttdato, "", new { @class = "text-danger" })
                    <!--BildeURL-->
                    <p>BildeURL</p>
                    @Html.EditorFor(model => model.Bilde, new { htmlAttributes = new { @class = "inputField", @type = "file" } })
                    @Html.ValidationMessageFor(model => model.Bilde, "", new { @class = "text-danger" })
                    <!--Publish button-->
                    <form>
                        <input type="submit" value="Publiser" class="publish-btn" />
                    </form>
                    <!--Back to list-->
                </center>
            </div>
        </div>

    }
</div>