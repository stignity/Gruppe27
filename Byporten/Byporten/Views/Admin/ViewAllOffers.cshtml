@model IEnumerable<Byporten.aktuelt>
@using System.Linq

@{
    ViewBag.Title = "Alle tilbudene";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="container">
    <h2 class="page-header">Alle tilbudene</h2>

    <p class="createNewButton">
        @Html.ActionLink("Lag nytt tilbud", "CreateOffer")
    </p>

    @if (!Model.Any())
    {
        <p class="lead page-header">Det finnes ingen tilbud</p>
    }
    else
    {

        <table class="table table-striped">
            <thead>
                <tr>
                    <td>Tittel</td>
                    <td>Sluttdato</td>
                    <td>Endre</td>
                    <td>Detaljer</td>
                    <td>Slett</td>
                </tr>
            </thead>

            @foreach (var item in Model.Reverse())
            {
            <tbody>
                <tr>
                    <td>@Html.DisplayFor(modelitem => item.Tittel)</td>
                    <td>@Html.DisplayFor(modelitem => item.Sluttdato)</td>
                    <td>@Html.ActionLink("Endre", "EditOffer", new { id = item.Id }, new { @class = "link-button" })</td>
                    <td>@Html.ActionLink("Detaljer", "OfferDetails", new { id = item.Id }, new { @class = "link-button" })</td>
                    <td>@Html.ActionLink("Slett", "DeleteOffer", new { id = item.Id }, new { @class = "link-button" })</td>
                </tr>
            </tbody>
            }

        </table>
    }

    
</div>