@model IEnumerable<Byporten.createpost>
@{
    ViewBag.Title = "Forsiden";
    Layout = "~/Views/Shared/_LayoutClient.cshtml";
}

<div class="carousel-wrap">
    <div class="container">
        <div class="jumbotron">
            <div class="row">
                <div id="quote1">
                    <div class="col-lg-8 col-md-10 col-sm-10">
                        <h1>Vi ønsker deg en riktig god handel her hos Byporten!</h1>
                        <p class="lead">Velkommen skal du være!</p>
                    </div>
                    <div class="col-lg-4 col-md-2 col-sm-2">
                        <img src="~/images/web/bag.png" class="img-responsive" />
                    </div>
                </div>
                <div id="quote2">
                    <div class="col-lg-12 col-md-12 col-sm-12">
                        <center>
                            <h1>Åpningstider</h1>
                             <hr />
                            <p class="lead">Hverdager: 09.00 - 21.00</p>
                            <p class="lead">Lørdager 10.00 - 21.00</p>
                        </center>
                    </div>
                </div>
                <div id="quote3">
                    <div class="col-lg-12 col-md-10 col-sm-10">
                        <h1>Sjekk ut kundeklubben!</h1>
                        <p class="lead">Kundeklubben er et super tilbud for dere som ønsker rabatter, invitasjoner til events og gratis wifi!</p>
                        @Html.ActionLink("Kundeklubben", "Kundeklubb", "Home", new {@class = "go-to-button" })
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>  

<div class="container pushDown">

    @{
        var itemCount = 0;
    }
        @foreach (var item in Model.Reverse().Take(9))
        {
            if (itemCount % 4 == 0 || itemCount % 4 == 4)
            {
                @:<div class="row">
            }
            <a href="@Url.Action("viewArticles", new {id = item.Id })">
            <div class="col-lg-3 col-md-3 col-sm-6 article-wrapper">
                <div class="image-section">
                    <img src="~/images/uploads/@Html.DisplayFor(modelItem => item.ImageURL)"/>
                </div>
                <div class="title-section">
                    <h4>@Html.DisplayFor(modelItem => item.Title)</h4>
                   
                </div>
            </div>
            </a>

            itemCount++;

            if ((itemCount % 4) == 0)
            {
                @:</div>

         }

        }
</div>

 

