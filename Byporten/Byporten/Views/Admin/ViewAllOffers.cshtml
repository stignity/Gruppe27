@model IEnumerable<Byporten.aktuelt>
@using System.Linq

@{
    ViewBag.Title = "Alle tilbudene";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="container">
    <h2 class="page-header">Alle tilbudene</h2>

    <p class="createNewButton">
        @Html.ActionLink("Lag nytt tilbud", "CreateOffer")
    </p>

    @if (!Model.Any())
    {
        <p class="lead page-header">Det finnes ingen tilbud</p>
    }
    else
    {
        foreach (var offers in Model.Reverse())
        {
            <div class="row itemInModel">
                <div class="col-lg-8 col-md-8 col-sm-6">
                    <h3>@Html.DisplayFor(modelitem => offers.Tittel)</h3>
                </div>
                <div class="col-lg-2 col-md-2 col-sm-3">
                    <p><strong>Sluttdato:</strong></p>
                    <p>@Html.DisplayFor(modelitem => offers.Sluttdato)</p>
                </div>
                <div class="col-lg-2 col-md-2 col-sm-3">
                    @Html.ActionLink("Endre", "EditOffer", new { id = offers.Id }, new { @class = "link-button btn btn-primary" })
                    @Html.ActionLink("Detaljer", "OfferDetails", new { id = offers.Id }, new { @class = "link-button btn btn-info" })
                    @Html.ActionLink("Slett", "DeleteOffer", new { id = offers.Id }, new { @class = "link-button btn btn-danger" })
                </div>
            </div>
        }
    }

    
</div>